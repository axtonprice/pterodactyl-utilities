clear
echo
#print_brake 70
echo "Axton's Pterodactyl Updater"
echo
echo "* Copyright (C) 2022."
echo "* https://github.com/axtonprice/pterodactyl-utilities"
echo
echo "* This script is not associated with the official Pterodactyl Project."
#print_brake 70
echo
echo "1. Update Panel"
echo "2. Update Wings"
echo "3. Close / Cancel"
read -p "Please enter a number: " choice
if [ $choice == "1" ]
    then
    echo "Updating the Panel...."
    cd /var/www/pterodactyl && php artisan p:upgrade
fi
if [ $choice == "2" ]
    then
    echo "Updating Wings...."
    curl -L -o /usr/local/bin/wings "https://github.com/pterodactyl/wings/releases/latest/download/wings_linux_$([[ "$(uname -m)" == "x86_64" ]] && echo "amd64" || echo "arm64")"
    chmod u+x /usr/local/bin/wings
fi
if [ $choice == "3" ]
    then
    echo "Canceling..."
    exit 0
fi
